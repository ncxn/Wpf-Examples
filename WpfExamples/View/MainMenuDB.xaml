        <DockPanel LastChildFill="True" >
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                <Menu IsMainMenu="True" ItemsSource="{Binding RootsItems}" Width="525">
                    <Menu.ItemTemplate>
                        <HierarchicalDataTemplate ItemContainerStyle="{StaticResource MenuItemStyle}">
                            <ContentPresenter Content="{Binding MenuHeader}" RecognizesAccessKey="True" />
                            <HierarchicalDataTemplate.ItemsSource>
                                <Binding Path="SubMenu" />
                            </HierarchicalDataTemplate.ItemsSource>
                        </HierarchicalDataTemplate>
                    </Menu.ItemTemplate>
                </Menu>
            </StackPanel>
            <Grid />
        </DockPanel>
    </Grid>
